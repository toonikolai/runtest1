<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context="com.example.nikolaistakheiko.runtest1.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/mapFragment"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/mainMenuButton"/>

        <Button
            android:id="@+id/mainMenuButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/menu_symbol" />

        <Button
            android:id="@+id/runButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:textColor="@color/color2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_with_shadow"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:elevation="0dp"
            android:text="Go for run" />

        <LinearLayout
            android:id="@+id/boxOverMap"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:background="@drawable/background_with_shadow"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/mainMenuButton"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:id="@+id/boxInsideBox1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="8dp"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/terrain1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:srcCompat="@mipmap/mountain_circle"
                        android:layout_gravity="center"
                        android:onClick="terrainMountain"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:paddingTop="4dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/terrain2"
                        android:layout_width="51dp"
                        android:layout_height="51dp"
                        app:srcCompat="@mipmap/forest_circle"
                        android:layout_gravity="center"
                        android:onClick="terrainForest"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:paddingTop="4dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/terrain3"
                        android:layout_width="53dp"
                        android:layout_height="53dp"
                        app:srcCompat="@mipmap/water_circle"
                        android:layout_gravity="center"
                        android:onClick="terrainWater"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:paddingTop="2dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/terrain4"
                        android:layout_width="57dp"
                        android:layout_height="57dp"
                        app:srcCompat="@mipmap/water_terrain"
                        android:layout_gravity="center"
                        android:onClick="terrainCity"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:paddingTop="4dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/terrain5"
                        android:layout_width="51dp"
                        android:layout_height="51dp"
                        app:srcCompat="@mipmap/golf_circle_2"
                        android:layout_gravity="center"
                        android:onClick="terrainFlat"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/boxInsideBox2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                android:id="@+id/linlayleft"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <!--<TextView-->
                    <!--android:id="@+id/mainLabel1"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:textColor="#ff000000"-->
                    <!--android:layout_gravity="center_horizontal"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="Run Speed" />-->

                <!--<com.triggertrap.seekarc.SeekArc-->
                    <!--android:id="@+id/mainseek1"-->
                    <!--android:layout_gravity="center_horizontal"-->
                    <!--android:layout_width="150dp"-->
                    <!--android:layout_height="150dp"-->
                    <!--android:padding="30dp"-->
                    <!--app:thumb="@color/colorAccent"-->
                    <!--app:rotation="180"-->
                    <!--app:roundEdges="true"-->
                    <!--app:max="20"-->
                    <!--app:progressColor="@color/colorAccent"-->
                    <!--app:arcWidth="2dp"-->
                    <!--app:startAngle="30"-->
                    <!--app:sweepAngle="300"-->
                    <!--app:touchInside="true"/>-->

                <TextView
                    android:id="@+id/mainLabel2"
                    android:layout_width="wrap_content"
                    android:textColor="#ff000000"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="Distance" />

                <com.triggertrap.seekarc.SeekArc
                    android:id="@+id/mainseek2"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:padding="30dp"
                    app:roundEdges="true"
                    app:thumb="@color/colorAccent"
                    app:rotation="180"
                    app:max="42"
                    app:progressColor="@color/colorAccent"
                    app:arcWidth="2dp"
                    app:startAngle="30"
                    app:sweepAngle="300"
                    app:touchInside="true"/>

            </LinearLayout>

                <LinearLayout
                android:id="@+id/linlayright"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/mainLabel3"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#ff000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose your run time" />

                <com.triggertrap.seekarc.SeekArc
                    android:id="@+id/mainseek3"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:padding="30dp"
                    app:thumb="@color/colorAccent"
                    app:roundEdges="true"
                    app:rotation="180"
                    app:max="100"
                    app:progressColor="@color/colorAccent"
                    app:arcWidth="2dp"
                    app:startAngle="30"
                    app:sweepAngle="300"
                    app:touchInside="true"/>

                <!--<TextView-->
                    <!--android:id="@+id/mainLabel4"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:textColor="#ff000000"-->
                    <!--android:layout_gravity="center_horizontal"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="10dp"-->
                    <!--android:text="Choose your run time" />-->

                <!--<com.triggertrap.seekarc.SeekArc-->
                    <!--android:id="@+id/mainseek4"-->
                    <!--android:layout_gravity="center_horizontal"-->
                    <!--android:layout_width="150dp"-->
                    <!--android:layout_height="150dp"-->
                    <!--android:padding="30dp"-->
                    <!--app:thumb="@color/colorAccent"-->
                    <!--app:rotation="180"-->
                    <!--app:roundEdges="true"-->
                    <!--app:max="100"-->
                    <!--app:progressColor="@color/colorAccent"-->
                    <!--app:arcWidth="2dp"-->
                    <!--app:startAngle="30"-->
                    <!--app:sweepAngle="300"-->
                    <!--app:touchInside="true"/>-->

            </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewInsideBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mainMenuButton"
            android:layout_marginTop="10dp"
            android:visibility="gone">

        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>
    
    <android.support.design.widget.NavigationView
        app:headerLayout="@layout/header"
        android:id="@+id/navViewMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:menu="@menu/menu_section"
        android:layout_gravity="start"
        app:itemTextColor="@color/progress_gray_dark"
        app:itemIconTint="@color/progress_gray_dark">
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
