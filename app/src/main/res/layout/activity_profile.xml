<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nikolaistakheiko.runtest1.ProfileActivity">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2">

        <Button
            android:id="@+id/profilebutton2"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/menu_symbol" />

        <!--<ImageView-->
            <!--android:id="@+id/imageView"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="125dp"-->
            <!--android:layout_alignParentStart="true"-->
            <!--android:layout_below="@+id/profilebutton2"-->
            <!--android:layout_marginTop="18dp"-->
            <!--android:layout_weight="3.26"-->
            <!--app:srcCompat="@drawable/borat_1" />-->

        <ScrollView
            android:id="@+id/ProfileScroll"
            android:layout_width="match_parent"
            android:layout_height="2000dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/circle_crop">

            <RelativeLayout
                android:id="@+id/LayoutName"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@+id/profilebutton2"
                android:layout_marginTop="23dp"
                android:layout_toEndOf="@+id/profilebutton2"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:id="@+id/ProfileTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif-condensed"
                    android:text="PROFILE"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="36sp" />

                <FrameLayout
                    android:id="@+id/frame"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_below="@+id/ProfileTitle"
                    android:layout_alignTop="@+id/pic"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:id="@+id/pic"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_alignStart="@+id/frame"
                        android:layout_below="@+id/ProfileTitle"
                        android:layout_weight="0.33"
                        android:src="@drawable/landscape" />

                    <ImageView
                        android:id="@+id/circle_crop"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_alignStart="@+id/frame"
                        android:layout_below="@+id/ProfileTitle"
                        android:src="@drawable/cicle_crop" />
                </FrameLayout>

                <TextView
                    android:id="@+id/NameLabel"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/frame"
                    android:text="Name"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/Name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/NameLabel"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:selectAllOnFocus="false"
                    android:singleLine="false"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/AgeLabel"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/Name"
                    android:text="Age"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/Age"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/AgeLabel"
                    android:ems="10"
                    android:inputType="number"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/GenderLabel"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/Age"
                    android:text="Gender"
                    android:textSize="24sp" />

                <Spinner
                    android:id="@+id/Gender"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/GenderLabel"/>

                <TextView
                    android:id="@+id/RunPartnerLabel"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/Gender"
                    android:text="Who Do You Want To Run With?"
                    android:textSize="24sp" />

                <Spinner
                    android:id="@+id/RunPartner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/RunPartnerLabel"/>

                <TextView
                    android:id="@+id/TerrainLabel"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/RunPartner"
                    android:text="Terrain"
                    android:textSize="24sp" />

                <Spinner
                    android:id="@+id/Terrain"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/TerrainLabel"/>

                <TextView
                    android:id="@+id/DistanceLabel"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/Terrain"
                    android:text="Distance"
                    android:textSize="24sp" />

                <SeekBar
                    android:id="@+id/Distance"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/DistanceLabel"/>

                <TextView
                    android:id="@+id/TimeLabel"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/Distance"
                    android:text="Time"
                    android:textSize="24sp" />

                <SeekBar
                    android:id="@+id/Time"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/TimeLabel"/>

                <TextView
                    android:id="@+id/PaceLabel"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/Time"
                    android:text="Pace"
                    android:textSize="24sp" />

                <SeekBar
                    android:id="@+id/Pace"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/PaceLabel"/>

                <TextView
                    android:id="@+id/GroupSizeLabel"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/Pace"
                    android:text="Group Size"
                    android:textSize="24sp" />

                <SeekBar
                    android:id="@+id/GroupSize"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/GroupSizeLabel" />

                <Space
                    android:id="@+id/space1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/GroupSize"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>


        </ScrollView>

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/menu_section"></android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>